<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Department</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <style>
      body {
        background-color: #f8f9fa;
      }
      .container {
        margin-top: 50px;
      }
      .card {
        border-radius: 10px;
      }
      .card-header {
        background-color: #007bff;
        color: white;
        border-radius: 10px 10px 0 0;
      }
      .btn-primary {
        background-color: #007bff;
        border: none;
      }
      .btn-primary:hover {
        background-color: #0056b3;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="card">
        <div class="card-header text-center">
          <h3>Edit Department</h3>
        </div>
        <div class="card-body">
          <form id="editDepartment">
            <div class="form-group">
              <label for="departmentName">Department Name</label>
              <input
                type="text"
                class="form-control"
                id="departmentName"
                name="name"
                value="<%= department.name %>"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary btn-block">
              Save Changes
            </button>
          </form>
        </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
      document
        .getElementById("editDepartment")
        .addEventListener("submit", async function (e) {
          e.preventDefault();

          const departmentName = document.getElementById("departmentName").value;
          const departmentId = "<%= department._id %>"; // Pass the department ID from backend
         
          try {
            if (!confirm("Are you sure you want to update the department?")) {
              return;
            }
           
            // Make the PUT request with FormData
            const response = await fetch(`/api/departments/${departmentId}`, {
              method: "PUT",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ name: departmentName }), // Pass FormData directly
            });

            if (response.ok) {
              alert("Department updated successfully");
              window.location.href = "/api/departments"; // Redirect after success
            } else {
              const errorText = await response.text();
              alert(`Failed to update department: ${errorText}`);
            }
          } catch (error) {
            console.error("Failed to update the department", error);
          }
        });
    </script>
  </body>
</html>
