    <script>
      const SELECTOR_SIDEBAR_WRAPPER = ".sidebar-wrapper";
      const Default = {
        scrollbarTheme: "os-theme-light",
        scrollbarAutoHide: "leave",
        scrollbarClickScroll: true,
      };
      window.addEventListener("DOMContentLoaded", () => {
        const currentLocation = window.location.pathname.toLowerCase(); // Normalize case

        // Get all nav links
        const navLinks = document.querySelectorAll(
          ".sidebar-wrapper .nav-link"
        );

        navLinks.forEach((link) => {
          // Normalize case and check if the paths match
          if (link.getAttribute("href").toLowerCase() === currentLocation) {
            link.classList.add("active");
          } else {
            link.classList.remove("active");
          }
        });
      });
      function AddBlogPost() {
        const form = document.getElementById("AddPostForm");
        const imageInput = document.getElementById("image");
        const image = imageInput.files.length > 0 ? imageInput.files[0] : null;

        // Check if an image file has been selected
        if (!image) {
          alert("Please select an image file to upload.");
          return;
        }

        var formData = new FormData(form);

        fetch("/api/posts", {
          // Assuming this is your backend API endpoint
          method: "POST",
          body: formData,
        })
          .then((response) => response.json())
          .then((data) => {
            console.log(data);
            if (data.status === "success") {
              alert("Post added successfully");
              window.location.reload();
            } else {
              alert("Failed to add post");
            }
          })
          .catch((error) => {
            console.error("Error:", error);
            alert("An error occurred while adding the post: " + error.message);
          });
      }

      function deleteBlogPost(postId) {
        console.log(postId);

        fetch(`/api/posts/${postId}`, {
          method: "DELETE",
        })
          .then((response) => {
            console.log(response);
            if (response.ok) {
              alert("Post deleted successfully");
              // Redirect to the posts listing page
              window.location.href = "/api/posts"; // Change to your correct URL
            } else {
              response.json().then((errorData) => {
                alert(`Failed to delete post: ${errorData.error}`);
              });
            }
          })
          .catch((error) => {
            console.error("Error:", error);
            alert("An error occurred while deleting the post." + error);
          });
      }
      function EditPost(postId) {
        try {
          var title = document.getElementById("title" + postId).value;
          var author = document.getElementById("author" + postId).value;
          var content = document.getElementById("content" + postId).value;
          var imageInput = document.getElementById("image"); // Get the input element specific to the post
          // Check if a new image has been selected
          var image = imageInput.files.length > 0 ? imageInput.files[0] : null;
        } catch (e) {
          console.log(e);
        }

        var formData = new FormData();
        formData.append("title", title);
        formData.append("author", author);
        formData.append("content", content);

        // Only append the image if a new one has been selected
        if (image) {
          formData.append("image", image);
        }

        (async () => {
          try {
            const response = await fetch(`/api/posts/${postId}`, {
              method: "PUT",
              body: formData,
            });

            if (response.ok) {
              alert("Post updated successfully");
              window.location.href = "/api/posts"; // Reload the page to reflect changes
            } else {
              const errorData = await response.json();
              alert(`Failed to update post: ${errorData.error}`);
            }
          } catch (error) {
            console.error("Error:", error);
            alert(
              "An error occurred while updating the post: " + error.message
            );
          }
        })();
      }
    </script>
